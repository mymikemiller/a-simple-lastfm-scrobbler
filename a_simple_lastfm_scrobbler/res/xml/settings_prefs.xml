<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceScreen android:title="@string/user_credentials_title"
		android:summary="@string/user_credentials_summary_no_napp">
		<intent android:action="android.intent.action.MAIN"
			android:targetPackage="com.adam.aslfms" android:targetClass="com.adam.aslfms.UserCredsListScreen" />
	</PreferenceScreen>
	<CheckBoxPreference android:key="toggle_scrobbling"
		android:title="@string/scrobbling" android:summaryOff="@string/scrobbling_enable"
		android:persistent="false" android:enabled="true" />
	<CheckBoxPreference android:key="toggle_nowplaying"
		android:title="@string/nowplaying" android:summaryOff="@string/nowplaying_enable"
		android:persistent="false" android:enabled="true" />

	<PreferenceScreen android:title="@string/show_supported_apps_list_title"
		android:summary="@string/show_supported_apps_list_summary">
		<intent android:action="android.intent.action.MAIN"
			android:targetPackage="com.adam.aslfms" android:targetClass="com.adam.aslfms.MusicAppsScreen" />
	</PreferenceScreen>

	<PreferenceScreen android:title="@string/advanced_options_title"
		android:summary="@string/advanced_options_summary">
		<intent android:action="android.intent.action.MAIN"
			android:targetPackage="com.adam.aslfms" android:targetClass="com.adam.aslfms.AdvancedOptionsScreen" />
	</PreferenceScreen>

	<PreferenceCategory android:title="@string/scrobble_status_title" />
	<Preference android:title="@string/status_show_title"
		android:summary="@string/status_show_summary">
		<intent android:action="android.intent.action.MAIN"
			android:targetPackage="com.adam.aslfms" android:targetClass="com.adam.aslfms.StatusActivity" />
	</Preference>
</PreferenceScreen>
